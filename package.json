{
  "name": "kangazone-server",
  "version": "0.1.0",
  "description": "Kangazone server apis.",
  "scripts": {
    "dev": "nodemon --watch src -e ts --exec 'ts-node ./src/'",
    "build": "tsc --project src",
    "lint": "eslint ./src/*.ts ./src/*/*.ts ./src/*/*/*.ts"
  },
  "author": "Uice Lu",
  "license": "GPL-3.0",
  "dependencies": {
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/method-override": "^0.0.31",
    "@types/mongoose": "^5.5.0",
    "@types/vue-resource": "^0.9.34",
    "bluebird": "^3.5.4",
    "core-js": "^2.6.5",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "element-ui": "^2.8.2",
    "express": "^4.16.4",
    "method-override": "^3.0.0",
    "moment": "^2.24.0",
    "mongoose": "^5.5.7",
    "redis": "^2.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@zeit/ncc": "^0.18.5",
    "babel-eslint": "^10.0.1",
    "babel-plugin-component": "^1.1.1",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.19.0",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.5",
    "webpack": "^4.31.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "rules": {
      "no-console": 1,
      "no-unused-vars": 1
    },
    "parserOptions": {
      "parser": "@typescript-eslint/parser",
      "ecmaFeatures": {
        "jsx": false
      }
    }
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
