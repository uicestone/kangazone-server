    "socket.io": "^2.2.0",
    "string-width": "^4.1.0",
    "wiegand-control": "^1.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@zeit/ncc": "^0.18.5",
    "babel-eslint": "^10.0.1",
    "babel-plugin-component": "^1.1.1",
    "eslint-plugin-vue": "^5.0.0",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.19.0",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.5",
    "webpack": "^4.31.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "rules": {
      "no-console": 1,
      "no-unused-vars": 1
    },
    "parserOptions": {
      "parser": "@typescript-eslint/parser",
      "ecmaFeatures": {
        "jsx": false
      }
    }
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
